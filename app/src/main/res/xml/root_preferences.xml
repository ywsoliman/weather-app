<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:icon="@drawable/ic_location"
        app:title="@string/location_header">

        <ListPreference
            app:defaultValue=""
            app:entries="@array/location_entries"
            app:entryValues="@array/location_values"
            app:key="location"
            app:title="@string/get_location_from"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:icon="@drawable/ic_language"
        app:title="@string/language">

        <ListPreference
            app:defaultValue="en"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:key="language"
            app:title="@string/application_language"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:icon="@drawable/ic_location"
        app:title="@string/units_of_measurements">

        <ListPreference
            app:defaultValue="kelvin"
            app:entries="@array/temp_entries"
            app:entryValues="@array/temp_values"
            app:key="temperature"
            app:title="@string/temperature_header"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="m/s"
            app:entries="@array/wind_entries"
            app:entryValues="@array/wind_values"
            app:key="wind"
            app:title="@string/wind_speed"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>